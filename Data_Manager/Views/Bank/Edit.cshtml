@model Data_Manager.Models.tbl_Bank

@{
    ViewBag.Title = "Edit Bank";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "Bank")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.BankId)
        @Html.HiddenFor(model => model.CreateDate)
        @Html.HiddenFor(model => model.CreateBy)
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i> Edit Bank</h1>
            </div>
            <div class="well">
                <div class=" form-group form-group-sm">
                    <div class="row ">

                        <div class="form-group col-lg-2">
                            @Html.LabelFor(model => model.Name, "Name")
                            @Html.TextBoxFor(model => model.Name, new { @class = "validate[required] form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                      
                    </div>
      



                </div>
            </div>
            <div class="row ">
                <div class="col-lg-1">
                </div>
                <div class="form-group col-lg-11">
                    <button type="submit" class="btn btn-base">
                        <i class="icon-pencil"> </i>
                        Save
                    </button>

                </div>

            </div>
        </div>
    </fieldset>
}



