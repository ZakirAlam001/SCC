@model IEnumerable<Data_Manager.Models.tbl_Stock>

@{
    ViewBag.Title = "Summery " + TempData["Date"];
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Modules</a></li>
                <li><a href="#">Sales Summery Report</a></li>

            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="col-md-12">

                    <div class="block">
                        <div class="header">
                            <h2><i class="widget-icon widget-icon-dark icon-list"> </i>Counter Sales </h2> <sub style="text-align:center; color:white"> @TempData["Date"]</sub>
                            @*<a title="Add New Record" class="btn btn-primary" href='@Url.Action("Create", "City")'><i class="fa  fa-plus"></i>  Create</a>*@
                            @*<a title="Add New Record" href='@Url.Action("Create", "Stock")' style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-plus"></i></a>*@
                            <a href="" data-toggle="modal" data-backdrop="static" data-target="#Searchmodel" style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-search"></i></a>
                        </div>
                        <div class="content">
                            <div class="table-responsive">
                                <table id="" cellpadding="0" cellspacing="0" width="100%" class="table table-hover table-bordered table-striped sortable">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>
                                                Quantity
                                            </th>

                                            <th>Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int totsum=0;
                                        foreach (var item in ViewBag.Summery)
                                        {
                                            totsum += Convert.ToInt32(@item["Total"]);
                                            <tr>
                                                <td>@item["Name"]</td>
                                                <td>@item["TotQuantity"]</td>
                                                @if(@item["Name"]=="Fresh Milk"){
                                                    <td>
                                                       Rs. @item["Total"]  
                                                        <span  title="Milk In litter" style="color:#ffc806;font-weight:bold">

                                                        (@{ decimal totmilksale = Convert.ToDecimal(TempData["SaleMilk"]); int rate = Convert.ToInt16(@TempData["Milkrate"]); decimal val = Convert.ToDecimal(@item["Total"]); val = (val / rate); @val.ToString("n2")  ; decimal tot = Convert.ToDecimal(TempData["TotalMilk"]); tot = tot * 40; tot = (tot - @totmilksale); decimal mon = (tot / 40); <span style="float:right;"> ---> Remaining : @tot.ToString("n2") Ltr ---->  @mon.ToString("n2") Mon </span> }) 
                                                    </span>
                                                        
                                                 
                                                        </td>
                                                }else
                                                {
                                                    <td> @item["Total"]</td>
                                                }

                                            </tr>
                                        }
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                            <td title="Total Sale Amount" align="right" style="background:white;color: black;font-size:20px;font-weight:bold"><span style="float:left">Total Amount-></span> @String.Format("{0:n2}", @totsum) </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div><br />
