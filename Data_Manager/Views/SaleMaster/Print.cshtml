@model Data_Manager.Models.POS_MasterSale

@{
    Layout = null;
    List<Data_Manager.Models.POS_ItemOut> items = Model.POS_ItemOut.ToList();
    //items=items.Where(a => a.Sale_Status == "S").ToList();
