<!-- Search Modal Start-->
@using (Html.BeginForm("Index", "POSMasterSale", FormMethod.Post))
{


    <div class="modal  fade" id="Searchmodel" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="modalTitle"> Apply Your Claim </h4>
                </div>
                <div class="modal-body">
                    <!-- <form role="form"> -->
                    <div class="well">

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="editor-label">
                                    Users
                                </div>
                                <div class="editor-field">
                                  <select name="search">
                                      <option value="0">Today</option>
                                      <option value="-3">Last 3-Days</option>
                                      <option value="-7">Last Week</option>
                                      <option value="-30">Last Month</option>
                                      <option value="-90">Last 3 Months</option>
                                      <option value="-180">Last 6 Month</option>
                                      <option value="-360">Last Year</option>
                                      <option value="-720">Last 2 Years</option>
                                      <option value="-1080">Last 3 Years</option>
                                      <option value="-1440">Last 4 Years</option>
                                      <option value="-1800">Last 5 Years</option>
                                      <option value="-3600">Last 10 Years</option>
                                  </select>
                                </div>
                            </div>
                         
                            
                        </div>
                    </div>

                    <div class="modal-footer">
                        @* @Html.Hidden("ClaimId", "")*@
                        <button type="submit" class="btn btn-primary btn-clean postClaim" id="btnSave"> Submit </button>
                    </div>
                    <!--</form>-->
                </div>
            </div>
        </div>
    </div>
}
<!-- Search Modal End-->
<script>
    var sum = 0;
    // iterate through each td based on class and add the values
    
    //  
    $(document).ready(function () {

        $(".price").each(function () {

            var value = $(this).text();
            // add only if the value is number
            if (!isNaN(value) && value.length != 0) {
                sum += parseFloat(value);

            }
        });
        $('#total').text(sum);
        sum = 0;


        $("#myTable1_filter input").change(function () {
            $(".price").each(function () {

                var value = $(this).text();
                // add only if the value is number
                if (!isNaN(value) && value.length != 0) {
                    sum += parseFloat(value);

                }
            });
            $('#total').text(sum).change(500);
            sum = 0;
        });
    });
    
</script>