@model IEnumerable<Data_Manager.Models.POS_MasterSale>


@{
    ViewBag.Title = "Index";
    ViewBag.printtext = DateTime.Now;
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Modules</a></li>
                <li><a href="#">Sale Master</a></li>

            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div><br />
    @*Table List Item*@
    <div class="row">
        <div class="col-md-12">

            <div class="block">
                <div class="header">
                    <h2><i class="widget-icon widget-icon-dark icon-list"> </i> Counter Sale</h2>
                    @*<a title="Add New Record" class="btn btn-primary" href='@Url.Action("Create", "City")'><i class="fa  fa-plus"></i>  Create</a>*@
                    @*<a title="Add New Record" href='@Url.Action("Create", "SaleMaster")' style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-plus"></i></a>*@
                    <a href="" data-toggle="modal" data-backdrop="static" data-target="#Searchmodel" style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-search"></i></a>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table id="myTable1" cellpadding="0" cellspacing="0" width="100%" class="table table-hover table-bordered table-striped sortable">
                            <thead>
                                <tr>
                                    <th>
                                        #Inv No
                                    </th>
                                    <th>
                                        Date
                                    </th>
                                    <th>
                                        Net Amount
                                    </th>
                                    <th>
                                        User
                                    </th>
                                    @*<th>
                                        Create By
                                    </th>*@

                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a title="Print Bill" href="@Url.Action("posprint", "SaleMaster", new { saleMstId = item.ID_MS }) " target="_blank"><i class="icon-print"></i></a> @item.MS_Code#
                                        </td>
                                        <td>
                                           @String.Format("{0:dd/MMM/yy hh:mm tt}", @item.Detetime)
                                        </td>
                                        <td class="price">
                                            @item.Net_Amount
                                        </td>
                                        <td>
                                            U-@item.UserID        
                                        </td>
                                        @*<td>
                                           @item.CreateBy
                                        </td>*@                                       
                                    </tr>
                                }
                            </tbody>
                            <tfoot><tr style="background: white;    color: black; font-size: 20px;"><td></td><td></td><td>Total---> <span id="total"></span></td></tr></tfoot>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
