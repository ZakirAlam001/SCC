@model IEnumerable<Data_Manager.Models.tbl_Loan_Transactions>


@{
    ViewBag.Title = "Index";
    ViewBag.printtext = "Loan GL(Payments) Report";
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Modules</a></li>
                <li><a href="#">Loan Transaction</a></li>

            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div><br />
    @*Table List Item*@
    <div class="row">
        <div class="col-md-12">

            <div class="block">
                <div class="header">
                    <h2><i class="widget-icon widget-icon-dark icon-list"> </i> Loan Transaction</h2>
                    @*<a title="Add New Record" class="btn btn-primary" href='@Url.Action("Create", "City")'><i class="fa  fa-plus"></i>  Create</a>*@
                    <a title="Add New Record" href='@Url.Action("Create", "Loan_Transaction")' style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-plus"></i></a>
                    <a href="" data-toggle="modal" data-backdrop="static" data-target="#Searchmodel" style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-search"></i></a>
                </div>

                <div class="content">

                    <div class="block">
                        <div class="head bg-default bg-light-ltr np">
                            <ul class="nav nav-tabs pull-left">
                                <li title="CR : @Model.Sum(a =>a.CR_Amount) / DR : @Model.Sum(a =>a.DR_Amount)" class="active"><a href="#tab13" data-toggle="tab"><i class=" icon-refresh"> </i>Loan Transaction</a></li>
                                <li title="Payable : @Model.Sum(a =>a.CR_Amount)"><a href="#tab14" data-toggle="tab"><i class="icon-upload"> </i> Loan Payable</a></li>
                                <li title="Receivable :@Model.Sum(a =>a.DR_Amount)"><a href="#tab15" data-toggle="tab"><i class="icon-download"> </i> Loan Receivable</a></li>
                            </ul>
                        </div>
                        <div class="content tab-content bg-dot50">
                            <div class="tab-pane active" id="tab13">
                                @{
                                    decimal cr = Convert.ToDecimal(Model.Sum(a => a.CR_Amount));

                                    decimal dr = Convert.ToDecimal(Model.Sum(a => a.DR_Amount));

                                    decimal bal =cr- dr ;
                                    var per = "";
                                    if (cr > 0)
                                    {
                                        if(dr == 0)
                                        { dr = 0; }
                                        per = ((cr / dr) * 100).ToString("F");
                                    }
                                    else
                                    {
                                        per = "0";
                                    }

                                    <center>
                                        <span class="icon-refresh"></span> <i>Total Balance : Rs.@String.Format("{0:n2}", @bal)</i>
                                        <div title="Payed @per%" style="width: 20%; min-width: 185px;" class="hp-info hp-simple  hp-inline">
                                            <span class="hp-main"><span class=""></span>@per%</span>
                                            <div class="hp-sm">
                                                <div class="progress progress-small  shine-me">
                                                    <div id="pro" class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="@per" aria-valuemin="0" aria-valuemax="100" style=""></div>
                                                </div>
                                            </div>
                                        </div>

                                    </center>
                                }
                                <script>
                                    $(window).load(function () {
                                        $(".progress-bar-danger").css('width', '@per%');
                                        //  width:
                                        //    alert("Handler for .focus() called.");

                                    });
                                </script>
                                <div class="table-responsive">
                                    <table id="myTable1" cellpadding="0" cellspacing="0" width="100%" class="table table-hover table-bordered table-striped sortable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Name
                                                </th>

                                                <th title="Amount Received from loan member">
                                                   DR Amount <i class="icon-download"></i>
                                                </th>
                                                <th title="Amount Payed to loan member">
                                                    CR Amount <i class="icon-upload"></i>
                                                </th>
                                                <th>
                                                    Loan Type
                                                </th>
                                                <th>
                                                    Apply
                                                </th>
                                                <th>
                                                    Duration
                                                </th>
                                                <th>
                                                    Created By
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>

                                                    <td>
                                                        @Html.DisplayFor(modelitem => item.tbl_LoanPerson.Name)
                                                    </td>
                                                    <td>
                                                        @item.DR_Amount
                                                    </td>
                                                    <td>
                                                        @item.CR_Amount
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelitem => item.LoanType)
                                                    </td>
                                                    <td>
                                                       @String.Format("{0:dd/MMM/yy}", @item.ApplyDate) 
                                                    </td>
                                                    <td>
                                                        @item.Durantion
                                                    </td>
                                                    <td>
                                                        @item.CreateBy
                                                    </td>
                                                    <td>
                                                        @*<a title="Edit" href="@Url.Action("Edit", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-pencil widget-icon-xlarge"></i></a>  |*@
                                                        <a title="Detail" href="@Url.Action("Details", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-list widget-icon-xlarge"></i></a> |
                                                        <a title="Delete" href="@Url.Action("Delete", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-trash widget-icon-xlarge"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td style="background:black;font-size: 20px;">Total Amount</td>
                                                <td title="Total DR Amount" align="right" style="background:black;font-size: 20px;">@String.Format("{0:n2}", @dr)</td>
                                                <td title="Total CR Amount" align="right" style="background:black ;font-size: 20px;">@String.Format("{0:n2}", @cr)</td>

                                                <td title="Total Balance Amount" class="shine-me" style="background:Red;font-size: 20px;">Bal <span style="text-align:right;"> @String.Format("{0:n2}", @bal)</span></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                               
                                            </tr>

                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab14">
                                <div class="table-responsive">
                                    <center>
                                        <span class="icon-refresh"></span> <i>Total Payable : Rs.@String.Format("{0:n2}", @Model.Sum(a => a.CR_Amount))</i>
                                        <div title="Payed @per%" style="width: 20%; min-width: 185px;" class="hp-info hp-simple  hp-inline">
                                            <span class="hp-main"><span class=""></span>@per%</span>
                                            <div class="hp-sm">
                                                <div class="progress progress-small shine-me">
                                                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="@per" aria-valuemin="0" aria-valuemax="100" style="width: @per%"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </center>

                                    <div class="table-responsive">
                                        <table id="myTable1" cellpadding="0" cellspacing="0" width="100%" class="table table-hover table-bordered table-striped sortable">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Name
                                                    </th>

                                                    <th>
                                                       CR Amount
                                                    </th>

                                                    <th>
                                                        Loan Type
                                                    </th>
                                                    <th>
                                                        Apply
                                                    </th>
                                                    <th>
                                                        Duration
                                                    </th>
                                                    <th>
                                                        Created By
                                                    </th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                { if (item.CR_Amount > 0)
                                                {
                                                    <tr>

                                                        <td>
                                                            @Html.DisplayFor(modelitem => item.tbl_LoanPerson.Name)
                                                        </td>
                                                        <td>
                                                            @item.CR_Amount
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelitem => item.LoanType)
                                                        </td>
                                                        <td>
                                                            @String.Format("{0:dd/MMM/yy}", @item.ApplyDate)
                                                            
                                                        </td>
                                                        <td>
                                                            @item.Durantion
                                                        </td>
                                                        <td>
                                                            @item.CreateBy
                                                        </td>
                                                        <td>
                                                            <a title="Edit" href="@Url.Action("Edit", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-pencil widget-icon-xlarge"></i></a>  |
                                                            <a title="Detail" href="@Url.Action("Details", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-list widget-icon-xlarge"></i></a> |
                                                            <a title="Delete" href="@Url.Action("Delete", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-trash widget-icon-xlarge"></i></a>
                                                        </td>
                                                    </tr>
                                                }
                                                }
                                            </tbody>
                                            <tfoot><tr></tr></tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab15">
                               
                                <div class="table-responsive">
                                    <table id="myTable1" cellpadding="0" cellspacing="0" width="100%" class="table table-hover table-bordered table-striped sortable">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Name
                                                </th>

                                                <th>
                                                    DR Amount
                                                </th>

                                                <th>
                                                    Loan Type
                                                </th>
                                                <th>
                                                    Apply
                                                </th>
                                                <th>
                                                    Duration
                                                </th>
                                                <th>
                                                    Created By
                                                </th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                 if (item.DR_Amount > 0)
                                                {
                                                <tr>

                                                    <td>
                                                        @Html.DisplayFor(modelitem => item.tbl_LoanPerson.Name)
                                                    </td>
                                                    <td>
                                                        @item.DR_Amount
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelitem => item.LoanType)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:dd/MMM/yy}", @item.ApplyDate)
                                                        
                                                    </td>
                                                    <td>
                                                        @item.Durantion
                                                    </td>
                                                    <td>
                                                        @item.CreateBy
                                                    </td>
                                                    <td>
                                                        <a title="Edit" href="@Url.Action("Edit", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-pencil widget-icon-xlarge"></i></a>  |
                                                        <a title="Detail" href="@Url.Action("Details", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-list widget-icon-xlarge"></i></a> |
                                                        <a title="Delete" href="@Url.Action("Delete", "Loan_Transaction", new { id = item.LoanID }) "><i class="icon-trash widget-icon-xlarge"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                            }
                                        </tbody>
                                        <tfoot><tr></tr></tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
