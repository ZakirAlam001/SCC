@model Data_Manager.Models.tbl_User


@*<script>alert('@TempData["sdata"]');</script>*@


@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "User")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
        <p id="submit"  title="All Data Refresh or delete"  style="background-color:red; cursor:pointer;" class="shine-me widget-icon widget-icon-dark"><i class="icon-refresh"></i></p>
    </div>
</div><br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i> Create Customer</h1>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div class=" form-group form-group-sm">
                        <div class="row ">

                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.UserName, "Name")
                                @Html.TextBoxFor(model => model.UserName, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.ContactNo, "Cell No")
                                @Html.TextBoxFor(model => model.ContactNo, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.ContactNo)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Email, "Email")
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.LoginID, "Login ID")
                                @Html.TextBoxFor(model => model.LoginID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LoginID)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Password, "Password")
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                            
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.IsActive, "Is Active")
                                @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "", Value=""},
                                    new SelectListItem() {Text = "Yes", Value="Y"},
                                    new SelectListItem() {Text = "No", Value="N"}
                                }, new { @class = "validate[required]" })
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Org_Id, "ORG_ID")
                                @Html.DropDownList("Org_Id", null, string.Empty, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Org_Id)
                            </div>
                        </div>

                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12">

                        <div class="form-group col-lg-1">


                        </div>
                        <div class="form-group col-lg-11">
                            <button type="submit" class="btn btn-base">
                                <i class=" icon-plus"> </i>
                                Save
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
    <div  class="modal fade" tabindex="-1" role="dialog" id="printConfirmationModal" data-backdrop="static" data-keyboard="false">
        <div  class="modal-dialog" role="document">
            <div  class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h2 class="modal-title" class=" widget-icon widget-icon-dark"><i class="icon-alert"> </i> Alert! Be Carefully use this option.</h2>
                </div>
                <div style="background-color : red !important;" class="modal-body">
                    <h3>Are you sure you want to Delete all Data make sure its not recoverable.</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-default" onclick="printNo()">No</button>
                    <a title="Back" href='@Url.Action("Datarefresh", "User")' class="btn btn-danger"><i class="icon ui-icon-trash"></i>Yes </a>
                    @*<button type="submit" class="btn btn-primary" onclick="printYes()">Yes</button>*@
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}
<script>
    $("#submit").click(function () {
        $('#printConfirmationModal').modal('show');
    })
    $("#Org_Id").change(function () {
        if ($("#Org_Id").val() == 1) {
            alert("This is Supper Admin User Not Allow to Client User");
        }
        
    })
</script>







