@model Data_Manager.Models.tbl_Vendor

@{
    ViewBag.Title = "Details";
}


<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "Vendor")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />

<fieldset>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-list"> </i> Vendor Details </h1>
        </div>
        <div class="panel-body">
            <div class="well">
                <div class="row">
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Name, "Name")<br />
                        @Html.DisplayFor(model => model.Name)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Phone, "Phone No")<br />
                        @Html.DisplayFor(model => model.Phone)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Email, "Email")<br />
                        @Html.DisplayFor(model => model.Email)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Contact_Person, "Contact Person")<br />
                        @Html.DisplayFor(model => model.Contact_Person)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Cell , "Cell No")<br />
                        @Html.DisplayFor(model => model.Cell )
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.IsDelete, "Is Delete")<br />
                        @Html.DisplayFor(model => model.IsDelete)
                    </div>
                </div>
                <div class="row">

                   
                   

                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.CreateDate, "Create Date")<br />
                        @Html.DisplayFor(model => model.CreateDate)
                    </div>

                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.CreateBy, "Create By")<br />
                        @Html.DisplayFor(modelItem => modelItem.CreateBy)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.UpdateDate, "Update Date")<br />
                        @Html.DisplayFor(model => model.UpdateDate)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.UpdateBy, "Update By")<br />
                        @Html.DisplayFor(model => model.UpdateBy)
                    </div>
                </div>

            </div>
            <div class="col-lg-4">
                <div class="col-lg-4"></div>
                <div class="form-group col-lg-8">

                    <a class="btn btn-base" href="@Url.Action("Edit", "Vendor", new { id = Model.VendorId }) "><i class="icon-pencil"></i>  Edit</a>

                </div>

            </div>
        </div>

    </div>
</fieldset>