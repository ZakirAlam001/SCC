@model Data_Manager.Models.tbl_Vendor

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "Vendor")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i> Create Vendor</h1>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div class=" form-group form-group-sm">
                        <div class="row ">

                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Name, "Name")
                                @Html.TextBoxFor(model => model.Name, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Phone, "Phone")
                                @Html.TextBoxFor(model => model.Phone, new { @class = " form-control" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Email, "Email")
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Contact_Person, "Contact Person")
                                @Html.TextBoxFor(model => model.Contact_Person, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Contact_Person)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Cell, "Cell No")
                                @Html.TextBoxFor(model => model.Cell, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Cell)
                            </div>    
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Adress, "Address")
                                @Html.TextBoxFor(model => model.Adress, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Adress)
                            </div>
                            <style>
                                .select2 {
                                    width: 100%;
                                }
                            </style>
                            
                        </div>
                        



                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12">

                        <div class="form-group col-lg-1">


                        </div>
                        <div class="form-group col-lg-11">
                            <button type="submit" class="btn btn-base">
                                <i class=" icon-plus"> </i>
                                Save
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}
