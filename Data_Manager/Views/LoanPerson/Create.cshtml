@model Data_Manager.Models.tbl_LoanPerson


@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "LoanPerson")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />
@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i> Create New</h1>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div class=" form-group form-group-sm">
                        <div class="row ">

                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Name, "Name")
                                @Html.TextBoxFor(model => model.Name, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Contact, "Contact")
                                @Html.TextBoxFor(model => model.Contact, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Contact)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.PhoneNo, "Phone No")
                                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PhoneNo)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.NIC, "NIC")
                                @Html.TextBoxFor(model => model.NIC, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.NIC)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.City, "City")
                                @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.City)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Description, "Description")
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                        <div class="row ">

                            <div class="form-group col-lg-4">
                                @Html.LabelFor(model => model.Adress, "Address")
                                @Html.TextBoxFor(model => model.Adress, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Adress)
                            </div>

                        </div>



                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12">

                        <div class="form-group col-lg-1">


                        </div>
                        <div class="form-group col-lg-11">
                            <button type="submit" class="btn btn-base">
                                <i class=" icon-plus"> </i>
                                Save
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}





