@model IEnumerable<Data_Manager.Models.tbl_Payment_Rcv>

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="#">Modules</a></li>
                <li><a href="#">Payment</a></li>

            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

        </div>
    </div><br />
    @*Table List Item*@
    <div class="row">
        <div class="col-md-12">

            <div class="block">
                <div class="header">
                    <h2><i class="widget-icon widget-icon-dark icon-list"> </i>Payment Received</h2>
                    @*<a title="Add New Record" class="btn btn-primary" href='@Url.Action("Create", "City")'><i class="fa  fa-plus"></i>  Create</a>*@
                    <a title="Add New Record" href='@Url.Action("Create", "Payments")' style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-plus"></i></a>
                    <a href="" data-toggle="modal" data-backdrop="static" data-target="#Searchmodel" style="float:right;" class="widget-icon widget-icon-dark"><i class="icon-search"></i></a>
                </div>
                <div class="content">
                    <div class="table-responsive">
                        <table id="myTable1" cellpadding="0" cellspacing="0" width="100%" class="table table-hover table-bordered table-striped sortable">
                            <thead>
                                <tr>
                                    <th>Print</th>
                                    <th>
                                        Description
                                    </th>

                                    <th>
                                        Customer
                                    </th>
                                    <th>
                                        Pay Type
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                    <th>
                                        Recv Date
                                    </th>
                                    <th>
                                        Create By
                                    </th>
                                    <th>
                                        Create Date
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>    
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a title="Print Payment Voucher" href="@Url.Action("PrintInvoice", "Payments", new { saleMstId = item.Payment_ID }) "><i class="icon-print"></i>|@item.Payment_ID</a>
                                        </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.tbl_Employee.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.Payment_Type)
                                        </td>
                                        <td>
                                            <i>@String.Format("{0:n2}", @item.Amount) </i>
                                        </td>
                                        <td>
                                            @item.Recv_Date
                                        </td>
                                        <td>
                                            @item.CreateBy
                                        </td>
                                        <td>
                                            @item.CreateDate
                                        </td>

                                        <td>
                                            <a title="Edit" href="@Url.Action("Edit", "Payments", new { id = item.Payment_ID }) "><i class="icon-pencil widget-icon-xlarge"></i></a>  |
                                            <a title="Detail" href="@Url.Action("Details", "Payments", new { id = item.Payment_ID }) "><i class="icon-list widget-icon-xlarge"></i></a> |
                                            <a title="Delete" href="@Url.Action("Delete", "Payments", new { id = item.Payment_ID }) "><i class="icon-trash widget-icon-xlarge"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody><tfoot><tr></tr></tfoot>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
