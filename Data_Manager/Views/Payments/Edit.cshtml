@model Data_Manager.Models.tbl_Payment_Rcv

@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "Payments")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />

@using (Html.BeginForm("Edit", "Payments", FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Payment_ID)
    @Html.HiddenFor(model => model.CreateDate)
    @Html.HiddenFor(model => model.CreateBy)
    <fieldset>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i> New Payment</h1>
            </div>
            <div class="panel-body">
                <div class="well">
                    <div class=" form-group form-group-sm">
                        <div class="row ">

                            <div class="form-group col-lg-4">
                                @Html.LabelFor(model => model.Description, "Description")
                                @Html.TextBoxFor(model => model.Description, new { @class = "validate[required] " })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.EmpID, "Name")
                                @Html.DropDownList("EmpID", string.Empty)
                                @Html.ValidationMessageFor(model => model.EmpID)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Payment_Type, "Payment Type")
                                @Html.DropDownList("Payment_Type", new List<SelectListItem>
                                {
                                    new SelectListItem{ Text="Select Pay Type", },
                                    new SelectListItem{ Text="Cash", Value = "Cash" },
                                    new SelectListItem{ Text="Bank", Value = "Bank" },
                                    new SelectListItem{ Text="Cheque", Value = "Cheque" },

                                 })
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Amount, "Amount")
                                @Html.TextBoxFor(model => model.Amount, new { @class = "validate[required] " })
                                @Html.ValidationMessageFor(model => model.Amount)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Recv_Date, "Date")
                                @Html.TextBoxFor(model => model.Recv_Date, new { @class = "datepicker1 validate[required] " })
                                @Html.ValidationMessageFor(model => model.Recv_Date)
                            </div>


                        </div>




                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-12">

                        <div class="form-group col-lg-1">

                            <input style="display:none" type="text" id="invostatus" name="invostatus" />
                        </div>
                        <div class="form-group col-lg-11">
                            <button type="submit" class="btn btn-base">
                                <i class=" icon-plus"> </i>
                                Save
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

