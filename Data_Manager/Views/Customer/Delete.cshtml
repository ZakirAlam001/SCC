@model Data_Manager.Models.tbl_Customer


@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "Customer")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />


<h4 class="alert alert-danger alert-dismissable"><i class="icon-trash widget-icon-xlarge"></i> Are you sure you want to <b>Delete</b> this?</h4>




<fieldset>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="widget-icon widget-icon-dark icon-trash"> </i> Delete Record</h3>
        </div>
        <div class="panel-body">
            <div class="well">
                <div class="row">
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Name, "Sales Type")<br />
                        @Html.DisplayFor(model => model.Name)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.CellNo, "Cell No")<br />
                        @Html.DisplayFor(model => model.CellNo)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.PhoneNo, "Phone No")<br />
                        @Html.DisplayFor(model => model.PhoneNo)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.NIC, "NIC")<br />
                        @Html.DisplayFor(model => model.NIC)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.tbl_Employee, "Employee(SO)")<br />
                        @Html.DisplayFor(model => model.tbl_Employee.Name)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Email, "Email")<br />
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>
                <div class="row">

                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.IsActive, "Is Active")<br />
                        @Html.DisplayFor(model => model.IsActive)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.IsDelete, "Is Delete")<br />
                        @Html.DisplayFor(model => model.IsDelete)
                    </div>

                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.CreateDate, "Create Date")<br />
                        @Html.DisplayFor(model => model.CreateDate)
                    </div>

                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.CreateBy, "Create By")<br />
                        @Html.DisplayFor(modelItem => modelItem.CreateBy)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.UpdateDate, "Update Date")<br />
                        @Html.DisplayFor(model => model.UpdateDate)
                    </div>
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.UpdateBy, "Update By")<br />
                        @Html.DisplayFor(model => model.UpdateBy)
                    </div>
                </div>
                <div class="row ">
                    <div class="form-group col-lg-2">
                        @Html.LabelFor(model => model.Address, "Address")<br />
                        @Html.DisplayFor(model => model.Address)
                    </div>
                </div>
            </div>


            <div class="col-lg-4">
                <div class="col-lg-4"></div>
                <div class="form-group col-lg-8">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @*<input class="btn btn-danger" type="submit" value="Delete" />*@
                        <button class="btn btn-danger" type="submit" value="Delete">
                            <i class="icon-trash">
                            </i> Delete
                        </button>
                    }


                </div>

            </div>
        </div>

    </div>

</fieldset>





