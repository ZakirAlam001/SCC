@model Data_Manager.Models.tbl_Customer


@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "Customer")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.CustomerID)
        @Html.HiddenFor(model => model.CreateDate)
        @Html.HiddenFor(model => model.CreateBy)
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i> Create City</h1>
            </div>
             <div class="well">
                    <div class=" form-group form-group-sm">
                        <div class="row ">

                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Name, "Name")
                                @Html.TextBoxFor(model => model.Name, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.CellNo, "Cell No")
                                @Html.TextBoxFor(model => model.CellNo, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.CellNo)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.PhoneNo, "Phone No")
                                @Html.TextBoxFor(model => model.PhoneNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PhoneNo)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.Email, "Email ID")
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.NIC, "NIC")
                                @Html.TextBoxFor(model => model.NIC, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.NIC)
                            </div>
                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.EmployeeID, "Employee SO")
                                @Html.DropDownList("EmployeeID", string.Empty)
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                            </div>
                        <div class="row ">


                            <div class="form-group col-lg-2">
                                @Html.LabelFor(model => model.IsActive, "Is Active")
                                @Html.DropDownListFor(model => model.IsActive, new List<SelectListItem>
                                {
                                    new SelectListItem() {Text = "", Value=""},
                                    new SelectListItem() {Text = "Yes", Value="Y"},
                                    new SelectListItem() {Text = "No", Value="N"}
                                }, new { @class = "validate[required]" })
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                            <div class="form-group col-lg-4">
                                @Html.LabelFor(model => model.Address, "Adress")
                                @Html.TextBoxFor(model => model.Address, new { @class = "validate[required] form-control" })
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>

                        </div>



                    </div>
                </div>
                <div class="row ">
                    <div class="col-lg-1">
                    </div>
                    <div class="form-group col-lg-11">
                        <button type="submit" class="btn btn-base">
                            <i class="icon-pencil"> </i>
                            Save
                        </button>

                    </div>

                </div>



            </div>
        

    </fieldset>
}



