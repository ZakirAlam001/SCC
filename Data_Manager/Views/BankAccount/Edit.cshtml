@model Data_Manager.Models.tbl_Account


@{
    ViewBag.Title = "Edit Account";
}
<div class="row">
    <div class="col-md-6">
        <a title="Back" href='@Url.Action("Index", "BankAccount")' style="" class="widget-icon widget-icon-dark"><i class="icon-arrow-left"></i></a>
    </div>
</div><br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "validate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.BankAccountId)
        @Html.HiddenFor(model => model.CreateDate)
        @Html.HiddenFor(model => model.CreateBy)
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title"><i class="widget-icon widget-icon-dark icon-plus"> </i>Edit Bank Account</h1>
            </div>
            <div class="well">
                <div class=" form-group form-group-sm">
                    <div class="row ">
                        <div class="form-group col-lg-2">
                            @Html.LabelFor(model => model.AccountNo, "Account No")
                            @Html.TextBoxFor(model => model.AccountNo, new { @class = "validate[required] form-control" })
                            @Html.ValidationMessageFor(model => model.AccountNo)
                        </div>
                        <div class="form-group col-lg-2">
                            @Html.LabelFor(model => model.AccountTitle, "Title")
                            @Html.TextBoxFor(model => model.AccountTitle, new { @class = "validate[required] form-control" })
                            @Html.ValidationMessageFor(model => model.AccountTitle)
                        </div>
                        <div class="form-group col-lg-2">
                            @Html.LabelFor(model => model.BankId, "Bank")
                            @Html.DropDownList("BankId", null, string.Empty, new { @class = "validate[required] select" })
                            @Html.ValidationMessageFor(model => model.BankId)
                        </div>
                        <div class="form-group col-lg-2">
                            @Html.LabelFor(model => model.OpeningBalance, "OpeningBalance")
                            @Html.TextBoxFor(model => model.OpeningBalance, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OpeningBalance)
                        </div>
                        <style>
                            .select2 {
                                width: 100%;
                            }
                        </style>
                    </div>
                </div>
            </div>
            <div class="row ">
                <div class="col-lg-1">
                </div>
                <div class="form-group col-lg-11">
                    <button type="submit" class="btn btn-base">
                        <i class="icon-pencil"> </i>
                        Save
                    </button>
                </div>
            </div>
        </div>
    </fieldset>
}



